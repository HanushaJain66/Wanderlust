<% layout("/layouts/boilerplate.ejs") %>
<style>
  #i-filters {
    display: flex;
    justify-content: center;
    overflow-x: auto; /* Enable horizontal scrolling */
    white-space: nowrap; /* Prevent wrapping of filters */
    -ms-overflow-style: none; /* Hide scrollbar in IE and Edge */
    scrollbar-width: none; /* Hide scrollbar in Firefox */
  }

  #i-filters::-webkit-scrollbar {
    display: none; 
  }
  .filter {
    text-align: center;
    margin: 0.5rem 1rem;
    opacity: 0.75;
    transition: 0.3s;
    cursor: pointer;
    display: inline-block; /* Ensure filters stay in a row */
    white-space: normal; /* Restore normal whitespace */
  }

  .filter:hover {
    opacity: 1;
    transform: scale(1.05);
  }
  .filter div i{
    color: #198754;;
  }
  .display-tax{
    display: none;
  }
  .tax-toggle{
    border: 1px solid green;
    border-radius: 1rem;
    height: 3.15rem;
    padding: 1rem;
    margin-top: 0.4rem;
  }
  @media (max-width: 1050px) {
    #i-filters {
      overflow-x: auto; /* Enable horizontal scrolling */
      display: block; /* Stack filters vertically */
      text-align: center; /* Center-align filters */
    }

    .filter {
      display: inline-block;
      white-space: nowrap; 
      margin: 0 1rem;
      font-size: small;
      opacity: 1;
    }
    

  }
</style>
  <body>
    <%= success %>
    <div id="i-filters">
      <div class="filter">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-tree"></i></div>
        <p>Forest</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing pools</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
      </div>
      <div class="filter">
        <div><i class="fa-brands fa-fort-awesome"></i></div>
        <p>Castles</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-campground"></i></div>
        <p>Camping</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic cities</p>
      </div>
      <div class="filter">
        <div><i class="fa-regular fa-snowflake"></i></div>
        <p>Arctic</p>
      </div>
      <div class="filter">
        <div><i class="fa-solid fa-mountain"></i></div>
        <p>Mountain</p>
      </div>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
          <label class="form-check-label" for="flexSwitchCheckDefault">Display total after taxes</label>
        </div>
      </div>
    </div>


    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
      
      <% for(let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
        <div class="card col" >
          <img src="<%= listing.image.url %>" class="card-img-top" alt="listing" style="height: 20rem">
          <div class="card-body">
            <p class="card-text">
              <b><%= listing.title %></b>
              <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
              <i class="display-tax">+ 18%GST</i>
            </p>
          </div>
        </div>
      </a>
          <% } %>
       
    </div>
  </body>

  <script>
    let taxswith=document.getElementById("flexSwitchCheckDefault");
    taxswith.addEventListener("click",()=>{
     let taxinfo=document.getElementsByClassName("display-tax");
     for(info of taxinfo)
     {
      if(info.style.display=="inline")
     {
      info.style.display="none";
     }
     else{
      info.style.display="inline";
     }
     }
    })
  </script>
