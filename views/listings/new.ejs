<% layout("/layouts/boilerplate.ejs") %>
<body>
  
  <div class="row mt-3">
    <div class="col-8 offset-2">
      <h3>Create a New Listing</h3>
  <form method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data">
    <div class="mb-3">
      <label for="title">Title:</label>
      <input id="title" name="listing[title]" placeholder="Enter title" type="text" class="form-control" required />
      <div class="valid-feedback">Title looks Good</div>
    </div>
    
    <!-- <br /> -->
    <div class="mb-3">
      <label for="description">Description:</label>
      <textarea id="description" name="listing[description]" placeholder="Enter description" class="form-control" required></textarea>
      <div class="valid-feedback">Great Description!!</div>
    </div>
    <!-- <br /> -->
  

    <div class="mb-3">
      <label for="image">Upload the listing image: </label>
      <input id="image" name="listing[image]" placeholder="Enter image URL/Link" type="file" class="form-control"/>
      <!-- <div class="invalid-feedback">Title looks Good</div> -->
    </div>

    <!-- <br /> -->
    <div class="mb-3">
      <label for="price">Price:</label>
      <input id="price" name="listing[price]" placeholder="Enter price" class="form-control" required/>
      <!-- <div class="ivalid-feedback">Title looks Good</div> -->
    </div>
    <!-- <br /> -->
    <div class="mb-3">
      <label for="country">Country:</label>
      <input id="country" name="listing[country]" placeholder="Enter country" type="text" class="form-control" required/>
      <div class="invalid-feedback">Enter correct country name</div>
    </div>
    <!-- <br /> -->
    <div class="mb-3">
      <label for="location">Location:</label>
      <input id="location" name="listing[location]" placeholder="Enter location" type="text" class="form-control" required/>
      <div class="invalid-feedback">Choose appropriate location</div>
    </div>
    <!-- <br /> -->
    <button  class="btn btn-dark add-btn">Add</button>
  </form>
</div>
</div>
<br> <br>
</body>
